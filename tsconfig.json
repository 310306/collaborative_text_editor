{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "ESNext", 
    "moduleResolution": "node", 
    "strict": false, 
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./build", 
    "rootDir": "./server" 
  },
  "include": ["server/**/*.ts"], 
  "exclude": ["node_modules"] 
}